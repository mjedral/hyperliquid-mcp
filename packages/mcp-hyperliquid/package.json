{
    "name": "@hl/mcp-hyperliquid",
    "version": "0.1.0",
    "description": "MCP server for Hyperliquid market data access",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "bin": {
        "hl-mcp": "./dist/bin/hl-mcp.js"
    },
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "test": "vitest run",
        "test:watch": "vitest",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "type-check": "tsc --noEmit",
        "clean": "rm -rf dist"
    },
    "keywords": [
        "hyperliquid",
        "mcp",
        "market-data",
        "websocket",
        "api"
    ],
    "license": "MIT",
    "dependencies": {
        "@hl/shared": "workspace:*"
    },
    "devDependencies": {
        "typescript": "^5.1.0",
        "tsup": "^7.2.0",
        "vitest": "^0.34.0"
    }
}